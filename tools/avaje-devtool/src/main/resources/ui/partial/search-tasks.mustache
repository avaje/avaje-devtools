<div id="detail-summary" class="col-span-3 card p-1 bg-muted" hx-swap-oob="true">
  <div class="card-body p-2">
      <h4 class="card-title">{{ first.displayName }}</h4>
      {{#action}}
        <div class="text-right p-2">
          <button tabindex="0" class="btn btn-sm btn-primary" hx-post="/task/run/{{ action.id }}" hx-target="#action-result">Run Task</button>
        </div>
        <div id="action-result"></div>
      {{/action}}
      <div id="task-detail" class="p-2 bg-background">
        <p>{{ first.description }}</p>
        <div>{{{ first.preview }}}</div>
      </div>
  </div>
</div>

<table class="table">
<tbody>
{{#tasks}}
  <tr tabindex="1"
      hx-get="/task/show/{{ uniqueTaskId }}"
      hx-trigger="click, keyup[keyCode==32], keyup[keyCode=13]"
      hx-target="#detail-summary">
    <td style="text-wrap-mode: wrap;">{{ displayName }}</td>
    <td>{{ type }}</td>
  </tr>
{{/tasks}}
</tbody>
</table>
