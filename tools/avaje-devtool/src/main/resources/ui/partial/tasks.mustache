<nav hx-swap-oob="true" id="top-nav" class="flex h-14 w-full items-center gap-2 px-4">
    <a class="active" hx-get="/tasks" hx-target="#content">tasks</a>
    <a class="" hx-get="/projects" hx-target="#content">projects</a>
    <a class="" hx-get="/sources" hx-target="#content">sources</a>
</nav>

<div class="grid grid-cols-5 gap-4">

      <div class="pr-4 col-span-2">
        <input class="input m-2" type="search" autofocus
               autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false"
               name="search" placeholder="Search tasks..."
               id="task-search-input"
               hx-post="/search"
               hx-trigger="input changed delay:200ms"
               hx-target="#search-results">

        <div id="search-results">
          <table class="table">
          <tbody>
          {{#tasks}}
            <tr>
              <td style="text-wrap-mode: wrap;">{{ displayName }}</td>
              <td>{{ type }}</td>
            </tr>
          {{/tasks}}
          </tbody>
          </table>
        </div>
      </div>

      <div id="detail-summary" class="col-span-3 card p-1 bg-muted">
        <div class="card-body p-2">
            <h4 class="card-title">{{ first.displayName }}</h4>
            {{#action}}
              <div class="text-right p-2">
                <button tabindex="0" class="btn btn-sm btn-primary" hx-post="/task/run/{{ action.id }}" hx-target="#action-result">Run Task</button>
              </div>
              <div id="action-result"></div>
            {{/action}}
            <div id="task-detail" class="p-2 bg-background">
              <p>{{ first.description }}</p>
              <div>{{{ first.preview }}}</div>
            </div>
        </div>
      </div>
</div>
