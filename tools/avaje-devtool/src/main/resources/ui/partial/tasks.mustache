<nav hx-swap-oob="true" id="top-nav" class="flex h-14 w-full items-center gap-2 px-4">
    <a class="active" hx-get="/tasks" hx-target="#content">tasks</a>
    <a class="" hx-get="/projects" hx-target="#content">projects</a>
    <a class="" hx-get="/sources" hx-target="#content">sources</a>
</nav>

<div class="grid grid-cols-2 gap-4">

      <div class="pr-4">
        <input class="input m-2" type="search"
               name="search" placeholder="Search tasks..."
               id="task-search-input"
               hx-post="/search"
               hx-trigger="input changed delay:200ms, keyup[key=='Enter']"
               hx-target="#search-results"
               ">

        <div id="search-results">
          <table class="table">
          <tbody>
          {{#tasks}}
            <tr>
              <td style="text-wrap-mode: wrap;">{{ displayName }}</td>
              <td>{{ type }}</td>
            </tr>
          {{/tasks}}
          </tbody>
          </table>
        </div>
      </div>

      <div id="detail-summary" class="card p-1">
          <div class="card-body">
              <h4 class="card-title">{{ first.displayName }}</h4>
              <p>{{ first.description }}</p>
              <div>{{{ first.preview }}}</div>
          </div>
        </div>
      </div>
</div>
